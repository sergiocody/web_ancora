# Variables de entorno requeridas para Netlify

# IMPORTANTE: Configura estas variables en Netlify en:
# Site settings > Build & deploy > Environment > Environment variables

# ============================================
# CONFIGURACIÓN GENERAL DEL SITIO
# ============================================

WEBSITE_TITLE="Grupo Vocal Ancore"
WEBSITE_DESCRIPTION="Coral de música en Zaragoza. Únete a nosotros o disfruta de nuestros conciertos."
WEBSITE_URL="https://tu-sitio.netlify.app"
WEBSITE_LANGUAGE="es"
WEBSITE_AUTHOR="Grupo Vocal Ancore"

# ============================================
# SLUGS Y CONFIGURACIÓN DE SECCIONES
# ============================================

BLOG_SLUG="eventos"
BLOG_TITLE="Eventos y Conciertos"
BLOG_DESCRIPTION="Descubre nuestros próximos conciertos y eventos"

PORTFOLIO_SLUG="miembros"
PORTFOLIO_TITLE="Nuestros Miembros"
PORTFOLIO_DESCRIPTION="Conoce a las voces que dan vida a nuestra música"

MENU_SLUG="menu"

# ============================================
# CONFIGURACIÓN REGIONAL
# ============================================

CURRENCY="EUR"
UNITS="metric"
NODE_VERSION="18"

# ============================================
# SNIPCART (si usas tienda)
# ============================================

SNIPCART_KEY="MyPublicSnipcartKey"

# ============================================
# NEWSLETTER (Mailchimp)
# ============================================

NEWSLETTER_PROVIDER="mailchimp"
MAILCHIMP_API_KEY="tu-api-key-aqui"
MAILCHIMP_SERVER_PREFIX="us21"
MAILCHIMP_LIST_ID="tu-list-id-aqui"

# ============================================
# EMAIL (Brevo)
# ============================================

FROM_EMAIL_ADDRESS="ancoragrupovocal@gmail.com"
TO_EMAIL_ADDRESS="ancoragrupovocal@gmail.com"
BREVO_API_KEY="tu-brevo-api-key-aqui"
