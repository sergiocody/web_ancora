        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
    <div class="w-full max-w-6xl aspect-video">
      <iframe 
        id="youtube-player"
        width="100%" 
        height="100%" 
        src="" 
        frameborder="0" 
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
        allowfullscreen
        class="rounded-lg"
      ></iframe>
    </div>
  </div>

</BaseLayout>

<script>
  // Funcionalidad del modal de video
  const modal = document.getElementById('video-modal');
  const player = document.getElementById('youtube-player') as HTMLIFrameElement;
  const closeBtn = document.getElementById('close-modal');
  const playButtons = document.querySelectorAll('.play-button');

  // Abrir modal y reproducir video
  playButtons.forEach(button => {
    button.addEventListener('click', () => {
      const videoId = button.getAttribute('data-video-id');
      if (videoId) {
        player.src = `https://www.youtube.com/embed/${videoId}?autoplay=1`;
        modal?.classList.remove('hidden');
        modal?.classList.add('flex');
      }
    });
  });

  // Cerrar modal
  function closeModal() {
    modal?.classList.add('hidden');
    modal?.classList.remove('flex');
    player.src = ''; // Detener el video
  }

  closeBtn?.addEventListener('click', closeModal);
  
  // Cerrar al hacer click fuera del video
  modal?.addEventListener('click', (e) => {
    if (e.target === modal) {
      closeModal();
    }
  });

  // Cerrar con tecla ESC
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closeModal();
    }
  });
</script>

<style>
  .hero {
    @screen sm {
      min-height: calc(100svh - 4rem);
    }
  }
  .media {
    @screen sm {
      max-height: calc(100svh - 4rem);
    }
  }

  .hero-section {
    position: relative;
  }

  .concierto-item {
    scroll-margin-top: 100px;
  }

  .video-card {
    transition: transform 0.3s ease;
  }

  .video-card:hover {
    transform: translateY(-4px);
  }

  .play-button {
    transition: all 0.3s ease;
  }

  .play-button:hover {
    box-shadow: 0 0 30px rgba(220, 38, 38, 0.6);
  }

  #video-modal {
    backdrop-filter: blur(4px);
  }

  /* Animaciones */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .concierto-item {
    animation: fadeIn 0.6s ease-out;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .hero-section h1 {
      font-size: 2.5rem;
    }
  }
</style>