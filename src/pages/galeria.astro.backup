    </p>
  </section>

  <!-- Grid de Conciertos -->
  <section class="pb-20 px-4">
    <div class="max-w-7xl mx-auto space-y-20">
      
      {conciertos.map((concierto, index) => (
        <article class="concierto-item" id={`concierto-${index}`}>
          
          <!-- Header del Concierto -->
          <div class="mb-8 text-center md:text-left">
            <div class="inline-block bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 px-4 py-1 rounded-full text-sm font-semibold mb-3">
              {concierto.fecha}
            </div>
            <h2 class="text-3xl md:text-4xl font-bold mb-3 text-gray-900 dark:text-white">
              {concierto.titulo}
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl">
              {concierto.descripcion}
            </p>
          </div>

          <!-- Grid de Videos -->
          <div class={`grid gap-6 ${
            concierto.videos.length === 1 ? 'md:grid-cols-1 max-w-4xl mx-auto' :
            concierto.videos.length === 2 ? 'md:grid-cols-2' :
            concierto.videos.length === 3 ? 'md:grid-cols-3' :
            'md:grid-cols-2 lg:grid-cols-2'
          }`}>
            
