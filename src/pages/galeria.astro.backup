        href="/eventos" 
        class="inline-block bg-white text-purple-600 font-bold py-3 px-8 rounded-lg text-lg hover:bg-gray-100 transition shadow-lg"
      >
        Ver Pr칩ximos Eventos
      </a>
    </div>
  </section>

  <!-- Modal para reproducir videos -->
  <div id="video-modal" class="fixed inset-0 bg-black bg-opacity-90 z-50 hidden items-center justify-center p-4">
    <button 
      id="close-modal" 
      class="absolute top-4 right-4 text-white hover:text-gray-300 z-10"
      aria-label="Cerrar video"
    >
