          <div class="subtitle balance py2">Revive nuestros mejores momentos</div>
          
          <div class="flex flex-wrap gap-4 py-8">
            <Button 
              label="Ver eventos" 
              href="/eventos" 
              color="surface-base"
              icon_only={false}
            />
            <Button 
              label="Conocer al equipo" 
              href="/miembros" 
              color="light"
