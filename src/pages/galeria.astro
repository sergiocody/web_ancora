---
/* GALERÍA DE FOTOS Y VIDEOS */
import { getCollection } from "astro:content";
import BaseLayout from "@layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import { Picture } from "astro-imagetools/components";

// Obtener todos los items de galería ordenados por fecha (más recientes primero)
const galleryItems = (await getCollection("gallery")).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

// Función para extraer el ID de YouTube
function getYouTubeId(url: string) {
  if (!url) return null;
  try {
    const u = new URL(url);
    if (u.hostname === 'youtu.be' && u.pathname.length > 1) {
      return u.pathname.slice(1);
    }
    const vParam = u.searchParams.get('v');
    if (vParam && vParam.length === 11) return vParam;
    if (u.pathname.startsWith('/embed/')) {
      const id = u.pathname.split('/embed/')[1];
      if (id && id.length === 11) return id;
    }
    if (u.pathname.startsWith('/shorts/')) {
      const id = u.pathname.split('/shorts/')[1];
      if (id && id.length === 11) return id;
    }
  } catch {/* ignorar errores de URL inválida */}
  const match = url.match(/(?:youtube\.com\/(?:v\/|embed\/|shorts\/|watch\?v=)|youtu\.be\/)([A-Za-z0-9_-]{11})/);
  return match ? match[1] : null;
}

// Función para formatear fecha
function formatDate(date: Date) {
  return new Intl.DateTimeFormat('es-ES', {
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  }).format(date);
}

const title = "Galería";
const description = "Nuestros mejores momentos en fotos y videos";
---

<BaseLayout title={title} description={description}>
  <div class="container-xl py-12">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 bg-gradient-to-r from-purple-600 via-blue-600 to-indigo-600 bg-clip-text text-transparent">
        {title}
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
        {description}
      </p>
    </div>

    <!-- Grid de items -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      {galleryItems.map((item) => {
        const isVideo = item.data.media_type === 'video';
        const videoId = isVideo && item.data.video_url ? getYouTubeId(item.data.video_url) : null;
        const thumbnail = item.data.thumbnail || (videoId ? `https://img.youtube.com/vi/${videoId}/maxresdefault.jpg` : '/images/piano.jpg');
        
        return (
          <article class="group relative bg-white dark:bg-slate-800 rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-all duration-300">
            {/* Imagen/Thumbnail - Ahora todo es clicable */}
            <button
              data-video-id={isVideo && videoId ? videoId : null}
              data-image-src={!isVideo ? thumbnail : null}
              data-title={item.data.title}
              data-type={isVideo ? 'video' : 'photo'}
              class="gallery-item relative aspect-video overflow-hidden bg-slate-200 dark:bg-slate-700 w-full cursor-pointer"
            >
              {item.data.thumbnail ? (
                <Picture
                  src={thumbnail}
                  alt={item.data.title}
                  sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, (max-width: 1280px) 33vw, 25vw"
                  attributes={{
                    picture: { class: "h-full" },
                    img: { class: "h-full w-full object-cover group-hover:scale-105 transition-transform duration-300" }
                  }}
                />
              ) : videoId ? (
                <img 
                  src={`https://img.youtube.com/vi/${videoId}/maxresdefault.jpg`}
                  alt={item.data.title}
                  class="h-full w-full object-cover group-hover:scale-105 transition-transform duration-300"
                  loading="lazy"
                />
              ) : (
                <div class="h-full w-full flex items-center justify-center bg-gradient-to-br from-purple-100 to-blue-100 dark:from-purple-900 dark:to-blue-900">
                  <Icon name={isVideo ? "youtube" : "image"} class="w-16 h-16 text-purple-400" />
                </div>
              )}
              
              {/* Badge de tipo */}
              {isVideo && (
                <div class="absolute top-2 right-2 bg-red-600 text-white px-2 py-1 rounded-md text-xs font-semibold flex items-center gap-1 pointer-events-none">
                  <Icon name="youtube" class="w-4 h-4" />
                  Video
                </div>
              )}
              
              {/* Overlay visible siempre en hover */}
              <div class="absolute inset-0 flex items-center justify-center bg-black/30 opacity-0 group-hover:opacity-100 transition-opacity">
                <div class="bg-white/90 rounded-full p-4">
                  {isVideo ? (
                    <svg class="w-8 h-8 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M6.3 2.841A1.5 1.5 0 004 4.11V15.89a1.5 1.5 0 002.3 1.269l9.344-5.89a1.5 1.5 0 000-2.538L6.3 2.84z" />
                    </svg>
                  ) : (
                    <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7" />
                    </svg>
                  )}
                </div>
              </div>
            </button>
            
            {/* Contenido */}
            <div class="p-4">
              <h3 class="font-bold text-lg mb-2 line-clamp-2 group-hover:text-primary transition-colors">
                {item.data.title}
              </h3>
              
              <div class="flex flex-col gap-1 text-sm text-gray-600 dark:text-gray-400">
                <div class="flex items-center gap-2">
                  <Icon name="news" class="w-4 h-4" />
                  <time datetime={item.data.date.toISOString()}>
                    {formatDate(item.data.date)}
                  </time>
                </div>
                
                {item.data.location && (
                  <div class="flex items-center gap-2">
                    <Icon name="map" class="w-4 h-4" />
                    <span class="line-clamp-1">{item.data.location}</span>
                  </div>
                )}
              </div>
              
              {item.data.description && (
                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400 line-clamp-2">
                  {item.data.description}
                </p>
              )}
            </div>
          </article>
        );
      })}
    </div>

    {/* CTA Redes sociales */}
    <section class="text-center bg-primary text-white rounded-lg p-12 mt-20">
      <h2 class="text-3xl font-bold mb-4">¿Quieres ver más?</h2>
      <p class="text-xl mb-6">
        Síguenos en nuestras redes sociales para más fotos y videos
      </p>
      <div class="flex gap-4 justify-center flex-wrap">
        <a
          href="https://www.instagram.com/ancoragrupovocal"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 bg-white text-primary px-6 py-3 rounded-lg font-bold hover:bg-neutral-100 transition"
        >
          <Icon name="instagram" class="w-5 h-5" />
          Instagram
        </a>
        <a
          href="#"
          class="inline-flex items-center gap-2 bg-white text-primary px-6 py-3 rounded-lg font-bold hover:bg-neutral-100 transition"
        >
          <Icon name="facebook" class="w-5 h-5" />
          Facebook
        </a>
      </div>
    </section>

    <!-- Modal para reproducir videos -->
    <div id="video-modal" class="hidden fixed inset-0 z-50 items-center justify-center p-4">
      <div class="absolute inset-0 bg-black/80 backdrop-blur-sm" id="video-modal-backdrop"></div>
      <div class="relative w-full max-w-4xl mx-auto">
        <div class="bg-neutral-900 rounded-lg overflow-hidden shadow-2xl">
          <div class="flex items-center justify-between px-4 py-3 border-b border-neutral-700">
            <h3 class="text-lg font-semibold text-white" data-title>Reproduciendo</h3>
            <button class="text-neutral-300 hover:text-white transition" id="close-video-modal" aria-label="Cerrar modal">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" /></svg>
            </button>
          </div>
          <div class="aspect-video bg-black" data-frame></div>
        </div>
      </div>
    </div>

    <!-- Modal para ver imágenes -->
    <div id="image-modal" class="hidden fixed inset-0 z-50 items-center justify-center p-4">
      <div class="absolute inset-0 bg-black/90 backdrop-blur-sm" id="image-modal-backdrop"></div>
      <div class="relative w-full max-w-6xl mx-auto">
        <div class="relative">
          <button class="absolute -top-12 right-0 text-white hover:text-gray-300 transition" id="close-image-modal" aria-label="Cerrar modal">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" /></svg>
          </button>
          <img data-image-src="" alt="" class="w-full h-auto max-h-[90vh] object-contain rounded-lg shadow-2xl" />
          <p class="text-white text-center mt-4 text-lg" data-image-title></p>
        </div>
      </div>
    </div>
  </div>

  <script is:inline>
    // Funciones globales para los modales
    window.openVideoModal = function(id, title) {
      const modal = document.getElementById('video-modal');
      if (!modal) return;
      const frame = modal.querySelector('[data-frame]');
      const titleEl = modal.querySelector('[data-title]');
      if (titleEl) titleEl.textContent = title;
      if (frame) {
        frame.innerHTML = '<iframe width="100%" height="100%" src="https://www.youtube.com/embed/' + id + '?autoplay=1" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen title="' + title.replace(/"/g,'&quot;') + '"></iframe>';
      }
      modal.classList.remove('hidden');
      modal.classList.add('flex');
      document.body.classList.add('overflow-hidden');
    };
    
    window.closeVideoModal = function() {
      const modal = document.getElementById('video-modal');
      if (!modal) return;
      const frame = modal.querySelector('[data-frame]');
      if (frame) frame.innerHTML = '';
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      document.body.classList.remove('overflow-hidden');
    };

    window.openImageModal = function(src, title) {
      const modal = document.getElementById('image-modal');
      if (!modal) return;
      const img = modal.querySelector('[data-image-src]');
      const titleEl = modal.querySelector('[data-image-title]');
      if (img) {
        img.src = src;
        img.alt = title;
      }
      if (titleEl) titleEl.textContent = title;
      modal.classList.remove('hidden');
      modal.classList.add('flex');
      document.body.classList.add('overflow-hidden');
    };

    window.closeImageModal = function() {
      const modal = document.getElementById('image-modal');
      if (!modal) return;
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      document.body.classList.remove('overflow-hidden');
    };

    // Event listeners cuando el DOM esté listo
    document.addEventListener('DOMContentLoaded', function() {
      // Clicks en items de galería
      document.querySelectorAll('.gallery-item').forEach(function(item) {
        item.addEventListener('click', function() {
          const type = this.getAttribute('data-type');
          const title = this.getAttribute('data-title');
          
          if (type === 'video') {
            const videoId = this.getAttribute('data-video-id');
            if (videoId) window.openVideoModal(videoId, title);
          } else {
            const imageSrc = this.getAttribute('data-image-src');
            if (imageSrc) window.openImageModal(imageSrc, title);
          }
        });
      });

      // Cerrar modales con clicks en backdrop
      const videoBackdrop = document.getElementById('video-modal-backdrop');
      if (videoBackdrop) {
        videoBackdrop.addEventListener('click', window.closeVideoModal);
      }

      const imageBackdrop = document.getElementById('image-modal-backdrop');
      if (imageBackdrop) {
        imageBackdrop.addEventListener('click', window.closeImageModal);
      }

      // Botones de cerrar
      const closeVideoBtn = document.getElementById('close-video-modal');
      if (closeVideoBtn) {
        closeVideoBtn.addEventListener('click', window.closeVideoModal);
      }

      const closeImageBtn = document.getElementById('close-image-modal');
      if (closeImageBtn) {
        closeImageBtn.addEventListener('click', window.closeImageModal);
      }

      // ESC para cerrar
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
          window.closeVideoModal();
          window.closeImageModal();
        }
      });
    });
  </script>
</BaseLayout>
