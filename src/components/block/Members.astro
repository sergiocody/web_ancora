---
import { Picture } from 'astro-imagetools/components';

interface Member {
  name: string;
  photo: string;
  role?: string;
}

interface Props {
  title?: string;
  content?: string;
  members?: Member[];
  block_class?: string;
  container?: string;
}

const { title, content, members = [], block_class = '', container = 'md' } = Astro.props;
---

<section class={`members-block ${block_class}`}>
  <div class={`container-${container} py-8`}>
    {title && (
      <div class="mb-8">
        <h2 class="text-2xl md:text-3xl font-bold mb-3 text-gray-900 dark:text-white">
          {title}
        </h2>
        {content && (
          <p class="text-base text-gray-600 dark:text-gray-400 max-w-2xl">
            {content}
          </p>
        )}
      </div>
    )}

    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4 md:gap-6">
      {members.map((member) => (
        <div class="member-card group">
          <div class="relative overflow-hidden rounded-xl bg-gradient-to-br from-slate-50 to-slate-100 dark:from-slate-800 dark:to-slate-900 shadow-sm hover:shadow-lg transition-all duration-500 border border-slate-200/50 dark:border-slate-700/30">
            <div class="aspect-[3/4] overflow-hidden">
              <Picture 
                src={member.photo}
                alt={member.name}
                attributes={{
                  img: {
                    class: "w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700 ease-out"
                  }
                }}
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-400">
                <div class="absolute bottom-0 left-0 right-0 p-4">
                  <h3 class="font-semibold text-base text-white transform translate-y-2 group-hover:translate-y-0 transition-transform duration-400">
                    {member.name}
                  </h3>
                  {member.role && (
                    <p class="text-xs text-slate-200 transform translate-y-2 group-hover:translate-y-0 transition-transform duration-400 delay-75">
                      {member.role}
                    </p>
                  )}
                </div>
              </div>
            </div>
          </div>
          <div class="mt-2 text-center block group-hover:opacity-60 transition-opacity duration-300">
             <h3 class="font-medium text-sm text-slate-800 dark:text-slate-200">
              {member.name}
            </h3>
             {member.role && (
              <p class="text-xs text-slate-500 dark:text-slate-400">
                {member.role}
              </p>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .member-card {
    animation: fadeInUp 0.5s ease-out forwards;
    opacity: 0;
  }
  
  .member-card:nth-child(1) { animation-delay: 0.05s; }
  .member-card:nth-child(2) { animation-delay: 0.1s; }
  .member-card:nth-child(3) { animation-delay: 0.15s; }
  .member-card:nth-child(4) { animation-delay: 0.2s; }
  .member-card:nth-child(5) { animation-delay: 0.25s; }
  .member-card:nth-child(6) { animation-delay: 0.3s; }
  .member-card:nth-child(7) { animation-delay: 0.35s; }
  .member-card:nth-child(8) { animation-delay: 0.4s; }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
